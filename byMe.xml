<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE RSyntaxTheme SYSTEM "theme.dtd">

<!--
	Dark theme based off of Notepad++'s Obsidian theme.
	See theme.dtd and org.fife.ui.rsyntaxtextarea.Theme for more information.
-->
<RSyntaxTheme version="1.0">

	<!-- Omitting baseFont will use a system-appropriate monospaced. -->
	<!--<baseFont family="..." size="13"/>-->

	<!--  General editor colors. -->
	<background color="10141c" />
	<caret color="f4b5d9" />
	<selection useFG="false" bg="405c7c" roundedEdges="false" />
	<currentLineHighlight color="2F393C" fade="false" />
	<marginLine fg="1e2533" />
	<markAllHighlight color="FFE900" />
	<!-- TODO: Fix me -->
	<markOccurrencesHighlight color="5b7179" border="true" />
	<matchedBracket fg="6A8088" bg="6b8189" highlightBoth="true" animate="true" />
	<hyperlinks fg="a082bd" />
	<secondaryLanguages>
		<language index="1" bg="333344" />
		<language index="2" bg="223322" />
		<language index="3" bg="332222" />
	</secondaryLanguages>

	<!-- Gutter styling. -->
	<gutterBorder color="1e2533" />
	<lineNumbers fg="9ab8a1" currentFG="b8cdbd"/>
	<foldIndicator fg="b8cdbd" armedFg="b8cdbd" iconBg="2f383c" iconArmedBg="3f484c" />
	<iconRowHeader activeLineRange="3399ff" />

	<!-- Syntax tokens. -->
	<tokenStyles>
		<style token="IDENTIFIER" fg="bdbec4" />
		<style token="RESERVED_WORD" fg="f46f80" bold="true" />
		<style token="RESERVED_WORD_2" fg="ed84c0" bold="true" />
		<style token="ANNOTATION" fg="E8E2B7" />
		<style token="COMMENT_DOCUMENTATION" fg="6C788C" />
		<style token="COMMENT_EOL" fg="66747B" italic="true"/>
		<style token="COMMENT_MULTILINE" fg="66747B" italic="true"/>
		<style token="COMMENT_KEYWORD" fg="ae9fbf" />
		<style token="COMMENT_MARKUP" fg="ae9fbf" />
		<style token="FUNCTION" fg="83f8d6" />
		<style token="DATA_TYPE" fg="f46f80" bold="true" />
		<style token="LITERAL_BOOLEAN" fg="51aaee" bold="false" />
		<style token="LITERAL_NUMBER_DECIMAL_INT" fg="99edd5" />
		<style token="LITERAL_NUMBER_FLOAT" fg="99edd5" />
		<style token="LITERAL_NUMBER_HEXADECIMAL" fg="99edd5" />
		<style token="LITERAL_STRING_DOUBLE_QUOTE" fg="eee09c" />
		<style token="LITERAL_CHAR" fg="eee09c" />
		<style token="LITERAL_BACKQUOTE" fg="eee09c" />
		<style token="MARKUP_TAG_DELIMITER" fg="678CB1" />
		<style token="MARKUP_TAG_NAME" fg="ABBFD3" bold="true" />
		<style token="MARKUP_TAG_ATTRIBUTE" fg="B3B689" />
		<style token="MARKUP_TAG_ATTRIBUTE_VALUE" fg="e1e2cf" />
		<style token="MARKUP_COMMENT" fg="66747B" />
		<style token="MARKUP_DTD" fg="A082BD" />
		<style token="MARKUP_PROCESSING_INSTRUCTION" fg="A082BD" />
		<style token="MARKUP_CDATA" fg="d5e6f0" />
		<style token="MARKUP_CDATA_DELIMITER" fg="ae9fbf" />
		<style token="MARKUP_ENTITY_REFERENCE" fg="678CB1" />
		<style token="OPERATOR" fg="E8E2B7" />
		<style token="PREPROCESSOR" fg="A082BD" />
		<style token="REGEX" fg="d39745" />
		<style token="SEPARATOR" fg="E8E2B7" />
		<style token="VARIABLE" fg="ae9fbf" bold="true" />
		<style token="WHITESPACE" fg="E0E2E4" />

		<style token="ERROR_IDENTIFIER" fg="ff0000" bg="E0E2E4" underline="true"/>
		<style token="ERROR_NUMBER_FORMAT" fg="ff0000" bg="E0E2E4" underline="true"/>
		<style token="ERROR_STRING_DOUBLE" fg="ff0000" bg="E0E2E4" underline="true"/>
		<style token="ERROR_CHAR" fg="ff0000" bg="E0E2E4" underline="true"/>
	</tokenStyles>

</RSyntaxTheme>
